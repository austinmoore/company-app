<% @employees.each do |employee| %>
  <tr>
    <td><%= employee.first_name %></td>
    <td><%= employee.last_name %></td>
    <td><%= link_to 'Show', [employee.company, employee] %></td>
    <td><%= link_to 'Edit', edit_company_employee_path(employee.company, employee) %></td>
    <td><%= link_to 'Destroy', [employee.company, employee], method: :delete, data: { confirm: 'Are you sure?' } %></td>
